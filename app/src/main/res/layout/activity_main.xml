<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Main">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/toggleConnect"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:text="Connect"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtInfo"
                android:layout_width="469dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/settings"
                android:layout_weight="1"
                android:text="Disconnected\n"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_more" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cameraImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>

    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/leftJoystick"
        android:layout_width="120dp"
        android:layout_height="264dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        custom:JV_backgroundColor="#636363"
        custom:JV_borderColor="#454545"
        custom:JV_borderWidth="4dp"
        custom:JV_buttonColor="#F6F6F6"
        custom:JV_buttonSizeRatio="15%"
        custom:JV_fixedCenter="false" />

    <RelativeLayout
        android:id="@+id/buttonsR"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/buttonO8"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="O8" />

        <Button
            android:id="@+id/buttonO7"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buttonO5"
            android:text="O7" />

        <Button
            android:id="@+id/buttonO5"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonO6"
            android:layout_toStartOf="@+id/buttonO6"
            android:text="O5" />

        <Button
            android:id="@+id/buttonO6"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonO7"
            android:layout_alignParentEnd="true"
            android:text="O6" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slidersR"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:visibility="invisible">

        <SeekBar
            android:id="@+id/sliderO5"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="0dp"
            android:max="512"
            android:progress="0" />

        <SeekBar
            android:id="@+id/sliderO6"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sliderO5"
            android:layout_alignParentEnd="true"
            android:max="512"
            android:progress="0" />

        <SeekBar
            android:id="@+id/sliderO7"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sliderO6"
            android:layout_alignParentEnd="true"
            android:max="512"
            android:progress="0" />

        <SeekBar
            android:id="@+id/sliderO8"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sliderO7"
            android:layout_alignParentEnd="true"
            android:max="512"
            android:progress="0" />
    </RelativeLayout>

    <Button
        android:id="@+id/sfx26"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="26" />

    <TextView
        android:id="@+id/sensors"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:text="I1: 0\nI2: 0\nI3: 0\nI4: 0\nI5: 0\nI6:0\nI7: 0\nI8: 0"
        android:textColor="#FFFFFF" />

</RelativeLayout>